/* pages/post/post.wxss */
swiper{
  width: 100%;
  height: 460rpx;
}
swiper image{
  width: 100%;
  height: 460rpx;
}
.post-container{
  flex-direction: column;
  display: flex;
  margin: 20rpx 0 40rpx;
  background-color: #FFF;
  border-bottom: 1px solid #EDEDED;
  padding-bottom: 5px;
}
.post-author-date{
  margin: 10rpx 0 20rpx 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author-date image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 20px;
  margin-right: 20rpx;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-date{
  font-size: 26rpx;
  margin-bottom: 10px;
}
.post-title{
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-content{
  color: #666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
  align-items: center;
}
.post-like image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
}
.post-like text{
  margin-right: 20px;
}
.imageList{
  width: 100%;
}